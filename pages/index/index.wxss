@import '../../fonts/iconfont.wxss';
page,.container{
    position: relative;
    height: 100%;
    overflow-x: hidden;
}
.ble{
    position: fixed;
    top: 26rpx;
    right: 26rpx;
    width: 62rpx;
    height: 62rpx;
    background-color: #0087DE;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fff;
    font-size: 40rpx;
}
.doorBtnBox{
    /* position: relative;  */
    padding-top: 40rpx;
    height: 500rpx;
    background-color: #009CFF;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.state-text{
    position: absolute;
    z-index: 100;
    top: 486rpx;
    left: 50%;
    transform: translateX(-50%);
    color: #fff;
    font-size: 36rpx;
    font-weight: 700;
    margin-top: 20rpx;
}
.doorBtnBox .btnBox{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 360rpx;
    height: 360rpx;
    border: 1rpx solid #fff;
    border-radius: 50%;
}
.btnBox .openBtn{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 340rpx;
    height: 340rpx;
    background-color: #fff;
    border-radius: 50%;
}
.lock{
    width: 180rpx;
    height: 278rpx;
    margin-left: 50rpx;
}
.temporaryOpenDoor{
    position: fixed;
    left: 50%;
    bottom: 100rpx;
    margin-left: -200rpx;
    width: 400rpx;
    height: 96rpx;
    background-color: #009CFF;
    border-radius: 48rpx;
    text-align: center;
    line-height: 96rpx;
    color: #fff;
}
.bg{
     margin-top: -40rpx; 
    width: 100%;
    height: 220rpx;
    transform: scaleX(1.1); 
    background-repeat: no-repeat;
    background-image: url('data:image/svg+xml;base64,')
}